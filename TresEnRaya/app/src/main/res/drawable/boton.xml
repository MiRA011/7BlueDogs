<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#42FFFF"
                android:endColor="#034FFF"
                android:angle="180"></gradient>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <gradient android:startColor="#F49FFF"
                android:endColor="#F40FFF"
                android:angle="180"></gradient>
        </shape>
    </item>


    <item>
        <shape>
            <gradient android:startColor="#42F000"
            android:endColor="#034000"
            android:angle="180"></gradient>
        </shape>
    </item>

</selector>